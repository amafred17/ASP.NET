@{
    ViewData["Title"] = "Create/Edit";
}
@model FarmFix.Models.Expenses
<div class="text-center">
    <h1 class="display-4">Create or Edit Expenses</h1>
    <p>Use the form</p>
</div>

<div class="mb-3">
    <form asp-action="CreateEditExpensesForm" asp-controller="Home">
       
        <input hidden type="number" class="form-control" placeholder="0" asp-for="Id" />
        <label class="mt-4">Name:</label>
        <input type="text" class="form-control" placeholder="Enter expense" asp-for="Name" />
        <label class="mt-4">Description:</label>
        <textarea class="form-control" placeholder="give a description" asp-for="Description"></textarea>
        <label class="mt-4">Type:</label>
        <input type="text" class="form-control" placeholder="Enter one-off or Subscription" asp-for="Type" />
        
        <button class="btn btn-primary mt-4" type="submit">Submit</button>

    </form>


</div>